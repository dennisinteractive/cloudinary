/**
 * Build group conditions of visible states.
 */
function _cloudinary_build_visible_states($visible) {
  $data = [];
  $datas = explode(',', $visible);
  foreach ($datas as $value) {
    $data[] = ['value' => $value];
  }
  return $data;
}
